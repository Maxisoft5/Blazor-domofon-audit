@page "/login"
@model DomofonAudit.Pages.LoginModel
@{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
}
<style>
    body, html {
        height: 100%;
        display:flex;
        justify-content:center;
        align-items:center;
    }
</style>

<form asp-page="Login" method="post" style="max-width: 700px">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="EmailAddress">Email address</label>
        <input asp-for="EmailAddress" type="email" class="form-control"
               name="EmailAddress" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="Password" value="@Model.Password" name="Password" type="password" class="form-control"
               placeholder="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    @if (!string.IsNullOrEmpty(@Model.ErrorMessage))
    {
        <p style="color:red; margin-top:10px">@Model.ErrorMessage</p>
    }
</form>

